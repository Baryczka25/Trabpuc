<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                              http://maven.apache.org/xsd/settings-1.0.xsd">

    <!-- Servers where Maven should authenticate -->
    <servers>
        <server>
            <id>github</id>  <!-- This id should match the value of server-id in your setup-java step -->
            <username>${env.GITHUB_ACTOR}</username>
            <password>${env.GITHUB_TOKEN}</password>
        </server>
    </servers>

    <!-- Mirrors and repositories -->
    <mirrors>
        <mirror>
            <id>github</id>
            <mirrorOf>central</mirrorOf>
            <url>https://maven.pkg.github.com/${{ github.repository_owner }}</url>
            <blocked>false</blocked>
        </mirror>
    </mirrors>

    <profiles>
        <profile>
            <id>github</id>
            <repositories>
                <repository>
                    <id>github</id>
                    <url>https://maven.pkg.github.com/${{ github.repository_owner }}</url>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>github</activeProfile>
    </activeProfiles>

</settings>
